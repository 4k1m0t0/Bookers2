<div class="container">
  <div class="row">
<%= render 'common/header' %>
<p class="notice"><%= flash[:notice] %></p>
<%= render 'common/userinfo' %>
<!--%= render 'books/new' %-->
<!-- home -->
<!-- user book only -->

<div class="col-xs-9">
<h3>Books</h3>

<table>
  <th>title</th>
  <th>Opinion</th>
  <% if @books.present? %>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id ) do %>
          <%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
          <% end %>
        </td>
  	    <td><%= link_to book.title, book_path(book.id) %></td>
  	    <td><%= book.body %></td>
  	  </tr>
  	<% end %>
  <% end %>
</table>
</div>
</div>
</div>