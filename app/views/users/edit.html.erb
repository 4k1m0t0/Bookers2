<%= render 'common/header' %>

<h3>User info</h3>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count,"error")%> prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@user) do |f| %>
  <div>
  <%= f.label :name %><br>
  <%= f.text_field :name, autofocus: true, autocomplete: "name"  %>
  </div>
  <div>
  <%= f.label :image %><br>
  <%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %><br>
  <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>
  </div>
  <div>
  <%= f.label :introduction %><br>
  <%= f.text_area :introduction, autofocus: true %>
  </div>
  <%= f.submit "Update User" %>

<% end %>