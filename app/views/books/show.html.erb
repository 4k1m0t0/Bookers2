<div class="container">
  <div class="row">
<%= render 'common/header' %>
<p class="notice"><%= flash[:notice] %></p>
<%= render 'common/userinfo' %>
<!--%= render 'books/new' %-->

<!-- book detail -->
<div class="col-xs-9">
<h3>Book detail</h3>
<table>
  <tr>
    <td>
      <%= link_to user_path(@book.user.id ) do %>
        <%= attachment_image_tag @book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
        <br>
        <%= @book.user.name %>
        <% end %>
    </td>
    <td>
      <%= link_to book_path(@book.id ) do %>
      <%= @book.title %>
      <% end %>
    </td>
    <td><%= @book.body %></td>
    <% if @book.user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
    <% end %>
  </tr>
</table>
</div>
</div>
</div>