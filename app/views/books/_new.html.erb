<div><!-- class="col-xs-12"-->
<%= form_for(@post_book) do |f| %>
  <% if @post_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post_book.errors.count %>error</h2>
      <ul>
      <% @post_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h3>New book</h3>
  <div class="form-group">
  <label for="InputTitle">Title</label><br>
  <%= f.text_field :title, {class: "form-control"} %>
  </div>
  <div class="form-group">
  <label for="InputOpinion">Opinion</label><br>
  <%= f.text_area :body, {class: "form-control"} %>
  </div>
    <%= f.submit "Create Book",{class: "btn btn-primary btn-block"} %>
<% end %>
</div>