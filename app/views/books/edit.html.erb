<%= render 'common/header' %>
<div class="container" style="margin-top: 70px;">
<div class="row">
<p class="notice"><%= flash[:notice] %></p>

<h3>Editing Book</h3>
<%= form_for(@post_book) do |f| %>
  <% if @post_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post_book.errors.count,"error")%> prohibited this obj from being saved:</h2>
      <ul>
      <% @post_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <label for="InputTitle">Title</label><br>
  <%= f.text_field :title, {class: "form-control"}%>
  </div>
  <div class="form-group">
  <label>Opinion</label><br>
  <%= f.text_area :body, {class: "form-control"}%>
  </div>
  <%= f.submit "Update Book", {class: "btn btn-primary btn-block"} %>
<% end %>
<div class="col-xs-6">
<%= link_to "Show", book_path(@post_book) %> |
<%= link_to "Back", books_path %>
</div>
</div>
</div>
<%= render 'common/footer' %>